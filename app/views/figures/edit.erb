<form method="POST" action="/figures/<%= @figure.id %>">

  <h2>Edit Figure</h2>
  <label for="figure_name">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br><br>

  <h3>Title</h3>
  <% @titles.each do |title| %>
    <%= title.name %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.any? {|figure_title| figure_title.id == title.id} %>><br>
  <% end %>
  <label for="new_title">New Title: </label>
  <input type="text" id="new_title" name="title[name]"><br><br>

  <h3>Landmark</h3>
  <% @landmarks.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.any? {|figure_landmark| figure_landmark.id == landmark.id} %>><br>
  <% end %>
  <label for="new_landmark">New Landmark: </label>
  <input type="text" id="new_landmark" name="landmark[name]"><br><br>

  <input type="submit" value="Edit Figure">
</form>